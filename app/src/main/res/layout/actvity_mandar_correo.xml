<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
            android:layout_width="279dp"
            android:layout_height="49dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextTextEmailAddress"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="63dp"
            android:layout_marginEnd="69dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="141dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:background="@android:color/darker_gray"/>
    <Button
            android:text="Enviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="61dp" app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
            android:layout_marginTop="36dp"/>
    <EditText
            android:layout_width="280dp"
            android:layout_height="186dp"
            android:inputType="textPersonName"
            android:text="Mensaje"
            android:ems="10"
            android:id="@+id/editTextTextPersonName"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="@+id/button"
            android:layout_marginStart="4dp" android:layout_marginBottom="76dp"
            app:layout_constraintBottom_toTopOf="@+id/button" android:layout_marginEnd="71dp"
            app:layout_constraintEnd_toEndOf="parent" android:background="#C1BABA"/>
</androidx.constraintlayout.widget.ConstraintLayout>