<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AcercaDeActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acercaBtnTwitter"

            android:drawableBottom="@drawable/ic_twitter_round"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:layout_marginTop="32dp"/>
    <Button
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:id="@+id/acercaBtnGitHub"

            android:drawableBottom="@drawable/ic_github_round"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/acercaBtnCorreo"/>
    <Button
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:id="@+id/acercaBtnCorreo"

            android:drawableBottom="@drawable/ic_correo_round"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/acercaBtnTwitter"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="219dp"
            android:layout_height="205dp" app:srcCompat="@drawable/ic_user"
            android:id="@+id/imageView2"
            android:textAlignment="center" android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>