<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AcercaDeActivity">

    <Button
            android:layout_width="77dp"
            android:layout_height="89dp"
            android:id="@+id/acercaBtnTwitter"
            android:drawableBottom="@drawable/ic_twitter_round"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.889" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:layout_marginTop="40dp"/>
    <Button
            android:layout_width="110dp"
            android:layout_height="79dp"
            android:id="@+id/acercaBtnGitHub"
            android:drawableBottom="@drawable/ic_github_round"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/acercaBtnCorreo"
            android:layout_marginStart="20dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginTop="48dp"/>
    <Button
            android:layout_width="94dp"
            android:layout_height="68dp"
            android:id="@+id/acercaBtnCorreo"
            android:drawableBottom="@drawable/ic_correo_round"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/acercaBtnTwitter"
            android:layout_marginEnd="172dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginTop="48dp"/>
    <ImageView
            android:layout_width="233dp"
            android:layout_height="186dp"
            android:id="@+id/imageView2"
            android:textAlignment="center" android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="128dp" app:srcCompat="@mipmap/ic_user"
            android:visibility="visible" app:layout_constraintHorizontal_bias="0.477" tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>